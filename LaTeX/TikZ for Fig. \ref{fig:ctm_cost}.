\begin{figure}[h]
\centering
\begin{tikzpicture}[>=latex, node distance=2cm, thick]

% Nodes
\node[draw, rectangle, rounded corners, fill=blue!10, minimum width=2.5cm, minimum height=1cm] (theta) {$\theta$ \\ Current State};
\node[draw, rectangle, rounded corners, fill=green!10, minimum width=2.5cm, minimum height=1cm, right=4cm of theta] (future) {$I_F$ \\ Future Intent};
\node[draw, circle, fill=orange!20, minimum size=1cm, below=1.5cm of $(theta)!0.5!(future)$] (delta) {$\Delta = \theta - I_F$};
\node[draw, rectangle, rounded corners, fill=yellow!20, minimum width=3cm, minimum height=1cm, below=2cm of delta] (norm) {Squared Norm \\ $\|\Delta\|^2$};
\node[draw, rectangle, rounded corners, fill=red!20, minimum width=3cm, minimum height=1cm, below=2cm of norm] (gain) {Psychological Gain \\ $G_{YT} = s(1+b)$};
\node[draw, rectangle, rounded corners, fill=purple!20, minimum width=3cm, minimum height=1cm, below=2cm of gain] (const) {Scaling Constant \\ $C$};
\node[draw, ellipse, fill=gray!20, minimum width=3.5cm, minimum height=1.5cm, below=2cm of const] (cost) {$J_{CTM\_YT}$ \\ Composite Cost};

% Arrows
\draw[->] (theta.south) -- ++(0,-0.75) -| (delta.north);
\draw[->] (future.south) -- ++(0,-0.75) -| (delta.north);
\draw[->] (delta.south) -- (norm.north);
\draw[->] (norm.south) -- (gain.north);
\draw[->] (gain.south) -- (const.north);
\draw[->] (const.south) -- (cost.north);

% Labels
\node[below=0.2cm of theta] (thetaLabel) {};
\node[below=0.2cm of future] (futureLabel) {};

\end{tikzpicture}
\caption{Schematic representation of CTM/TEGW cost function: current state $\theta$ transitions toward future intent $I_F$, modulated by psychological-temporal gain $G_{YT}$ and scaled by constant $C$.}
\label{fig:ctm_cost}
\end{figure}
